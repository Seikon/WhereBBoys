    title Bare - Start Bootstrap Template
    // Bootstrap core CSS
    link(href='http://localhost:3000/css/bootstrap.min.css', rel='stylesheet')
  body
    // Navigation
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.static-top
      .container
        a.navbar-brand(href='#' sty) Where, Bboys?
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarResponsive.collapse.navbar-collapse
          ul.navbar-nav.ml-auto
            li.nav-item.active
              a.nav-link(href='#')
                | Mapa
                span.sr-only (current)
            li.nav-item
              a.nav-link(href='#') Contribuciones
            li.nav-item
              a.nav-link(href='#') Ayuda
    // Page Content
    .container
      // Title content + map
      .row
        .col-lg-12.text-center
          h1.mt-5.brandedCaption Where, BBoys?
          p.lead #{UIMessages.headerTitle}
          #mapContainer
      // Wizard Steep columns aren't display by default.
      // They are showed when content is loaded (first step) and when user make an certainly action (second and third steps)
      .row
        .col-lg-4.text-center(style="display: none" id="stepOneColumn")
          h2.mt-5.brandedCaption #{UIMessages.stepOne}
          p #{UIMessages.stepOneDescription}
        .col-lg-4.text-center(style="display: none" id="stepTwoColumn")
          h2.mt-5.brandedCaption #{UIMessages.stepTwo}
          p #{UIMessages.stepTwoDescription}
          // Toogle selector Search / Add
          .switch-toggle.switch-3.switch-candy(style="width: 100%")
            input#on(name='state-d', type='radio', checked='')
            label(for='on', id="optIdSearch", onclick='') Buscar
            input#na(name='state-d', type='radio', disabled='', checked='checked')
            label.disabled(for='na', onclick='')  
            input#off(name='state-d', type='radio')
            label(for='off', id="optIdAdd", onclick='') Añadir
            a
        .col-lg-4.text-center(style="display: none" id="stepThreeColumn")
          h2.mt-5.brandedCaption #{UIMessages.stepThree}
          p #{UIMessages.stepOneDescription}
    // Bootstrap core JavaScript
    script(src='https://code.jquery.com/jquery-3.3.1.min.js')
    script(src='http://localhost:3000/js/bootstrap/bootstrap.bundle.min.js')
